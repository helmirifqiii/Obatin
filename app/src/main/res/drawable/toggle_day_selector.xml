<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_accent"/> <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background_light"/> <stroke android:width="1dp" android:color="#CCCCCC"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>