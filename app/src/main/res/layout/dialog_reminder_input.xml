<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanggal_waktu_obat_judul"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_accent"
            android:layout_marginBottom="16dp"/>

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:numbersSelectorColor="@color/primary_accent"
            android:numbersTextColor="@color/text_dark"
            android:headerBackground="@color/primary_accent"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dosis_judul"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text_dark"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_dark_bg"
            android:backgroundTint="@color/input_background_light"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp">

            <Button
                android:id="@+id/btn_minus_dosage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/minus_button"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_accent"
                app:cornerRadius="8dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_dosage_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dosage_default"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_plus_dosage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/plus_button"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_accent"
                app:cornerRadius="8dp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_dosage_unit_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>