<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Avatar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="true">

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profil1"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profil2"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profil3"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/avatar4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profil4"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/avatar5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profil5"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/avatar6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profil6"
            android:scaleType="centerCrop"/>
    </GridLayout>
</LinearLayout>
