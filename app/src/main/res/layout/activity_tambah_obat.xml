<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".TambahObatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <LinearLayout
            android:id="@+id/layout_nama_obat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="25dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_obat"
                android:layout_width="68dp"
                android:layout_height="64dp"
                android:background="@drawable/rounded_dark_bg"
                android:backgroundTint="@color/ijofix"
                android:contentDescription="@string/icon_obat_desc"
                android:padding="12dp"
                android:src="@drawable/icon_pil" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_medicine_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pil"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ijofix"
                    android:background="@drawable/rounded_dark_edittext_2"
                    android:backgroundTint="@color/input_background_light"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:clickable="true"
                    android:focusable="true"/>

                <EditText
                    android:id="@+id/et_nama_obat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nama_obat_hint"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@color/text_dark"
                    android:background="@drawable/rounded_dark_edittext_2"
                    android:backgroundTint="@color/input_background_light"
                    android:padding="12dp"
                    android:minHeight="56dp"
                    android:textSize="20sp"
                    android:inputType="textCapWords"
                    android:autofillHints="name"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_frekuensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frekuensi_judul"
            android:textColor="@color/text_dark" android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_nama_obat"/>

        <RadioGroup
            android:id="@+id/rg_frekuensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_frekuensi">
            <RadioButton
                android:id="@+id/rb_setiap_hari"
                android:text="@string/frekuensi_setiap_hari"
                style="@style/FrequencyRadioButton" />
            <RadioButton
                android:id="@+id/rb_hari_tertentu"
                android:text="@string/frekuensi_hari_tertentu"
                style="@style/FrequencyRadioButton" />
            <RadioButton
                android:id="@+id/rb_setiap_x"
                android:text="@string/frekuensi_setiap_x"
                style="@style/FrequencyRadioButton" />
            <RadioButton
                android:id="@+id/rb_sesuai_kebutuhan"
                android:text="@string/frekuensi_sesuai_kebutuhan"
                style="@style/FrequencyRadioButton" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_cycle_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:text="Siklus: belum diatur"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/rg_frekuensi"/>

        <LinearLayout
            android:id="@+id/layout_hari_tertentu_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_cycle_status">

            <TextView
                android:id="@+id/tv_selected_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Pilih hari dengan menekan Hari Tertentu di atas"
                android:textColor="@color/ijofix"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_end_date_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Akhiri konsumsi pada:"
            android:textColor="@color/text_dark" android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_hari_tertentu_wrapper"/>

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Tidak ada (Lanjutan)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/rounded_dark_edittext_2"
            android:backgroundTint="@color/input_background_light"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/tv_end_date_judul"/>

        <TextView
            android:id="@+id/tv_waktu_dosis_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/waktu_dosis_judul"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_end_date"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:id="@+id/reminder_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_waktu_dosis_judul"/>

        <Button
            android:id="@+id/btn_tambah_waktu_dosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tambah_waktu_dosis"
            android:backgroundTint="@color/ijofix"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/reminder_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/et_catatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/catatan_opsional"
            android:minLines="3"
            android:gravity="top"
            android:background="@drawable/rounded_dark_edittext_2"
            android:backgroundTint="@color/input_background_light"
            android:padding="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/text_dark"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tambah_waktu_dosis"
            android:inputType="textMultiLine"
            android:autofillHints="no" />

        <TextView
            android:id="@+id/tv_pengingat_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perlu notifikasi pengingat?"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_catatan" />

        <LinearLayout
            android:id="@+id/layout_checkboxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pengingat_judul">

            <CheckBox
                android:id="@+id/cb_ya_isi_ulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ya"
                android:layout_marginEnd="16dp"
                android:buttonTint="@color/ijofix"
                android:textColor="@color/text_dark"/>

            <CheckBox
                android:id="@+id/cb_tidak_isi_ulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tidak"
                android:buttonTint="@color/ijofix"
                android:textColor="@color/text_dark"
                android:checked="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/simpan"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/ijofix"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_checkboxes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>